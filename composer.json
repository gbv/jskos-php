{
    "name": "gbv/jskos",
    "description": "JSKOS data model in PHP",
    "keywords": ["SKOS", "Knowledge Organization"],
    "type": "library",
    "license": "LGPL",
    "author": [
        {
            "name": "Jakob VoÃŸ",
            "email": "jakob.voss@gbv.de"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "suggest": {
        "gbv/jskos-http": "^0.2",
        "gbv/jskos-rdf": "^0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.1",
        "theseer/phpdox": "^0.10",
        "phploc/phploc": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "JSKOS\\": "src/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit tests --coverage-clover build/logs/clover.xml"
        ],
        "style": [
            "which php-cs-fixer && php-cs-fixer fix src"
        ],
        "doc": [
            "mkdir -p build/logs",
            "vendor/bin/phploc -q --log-xml=build/logs/phploc.xml --count-tests src tests",
            "vendor/bin/phpdox"
        ]
    }
}
